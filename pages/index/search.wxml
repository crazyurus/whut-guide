<navbar title="搜索结果"></navbar>
<searchbar defaultValue="{{wd}}" bindsearch="search" />
<view class="container">
  <card
    wx:for="{{articles}}"
    wx:key="{{item.id}}"
    data-id="{{item.id}}"
    data-link="{{item.link}}"
    title="{{item.title}}" 
    desc="{{item.description}}" 
    bgColor="{{color}}" 
    bindtap="detail"
  ></card>
  <view wx:if="{{articles.length === 0 && wd}}" class="empty">没找到呢，试试其它关键词</view>
</view>