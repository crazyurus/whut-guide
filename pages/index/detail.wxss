.article {
  border: 2px dashed #000;
  border-radius: 28rpx;
  background-color: #6eb5d4;
  color: #fff;
  margin: 20rpx 38rpx;
  height: calc(100% - 430rpx);
}

.title {
  font-size: 24px;
  height: 96rpx;
  line-height: 96rpx;
  margin: 40rpx 0;
  text-align: center;
  background-color: #3390b8;
}

.content {
  margin: 0 32rpx;
  font-size: 14px;
  height: calc(100% - 208rpx);
  overflow-y: auto;
  width: calc(100% - 52rpx);
  line-height: 1.3;
  -webkit-overflow-scrolling: touch;
}

.link {
  text-decoration: underline;
}

.share[plain] {
  position: absolute;
  top: 66%;
  right: 0;
  border: none;
  color: #fff;
  background-color: rgba(89, 151, 198, 0.8);
  font-size: 16px;
  border-radius: 20px 0 0 20px;
  padding: 0 10px 0 16px;
}