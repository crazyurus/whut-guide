.article {
  border: 2px dashed #000;
  border-radius: 28rpx;
  background-color: #7fc5e3;
  color: #fff;
  margin: 60rpx 38rpx;
  height: calc(100% - 560rpx);
}

.title {
  font-size: 24px;
  height: 96rpx;
  line-height: 96rpx;
  margin: 40rpx 0;
  text-align: center;
  background-color: #3390b8;
}

.content {
  margin: 0 32rpx;
  font-size: 14px;
  height: calc(100% - 208rpx);
  overflow-y: auto;
  width: calc(100% - 52rpx);
  line-height: 1.5;
}