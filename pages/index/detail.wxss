.article {
  border: 2px dashed #000;
  border-radius: 28rpx;
  background-color: #6eb5d4;
  color: #fff;
  margin: 20rpx 38rpx;
  height: calc(100% - 430rpx);
}

.title {
  font-size: 24px;
  height: 96rpx;
  line-height: 96rpx;
  margin: 40rpx 0 0;
  text-align: center;
  background-color: #3390b8;
}

.content {
  margin: 0 32rpx;
  font-size: 14px;
  height: calc(100% - 168rpx);
  overflow-y: auto;
  width: calc(100% - 52rpx);
  line-height: 1.3;
  -webkit-overflow-scrolling: touch;
}

.blank {
  height: 40rpx;
}

.link {
  text-decoration: underline;
}

.share[plain] {
  position: absolute;
  top: 67%;
  right: 0;
  border: none;
  color: #fff;
  background-color: rgba(89, 151, 198, 0.7);
  font-size: 16px;
  border-radius: 16px 0 0 16px;
  padding: 0 8px 0 16px;
  line-height: 2;
  transition: all 0.5s;
  opacity: 1;
}

.share-hidden[plain] {
  opacity: 0;
}