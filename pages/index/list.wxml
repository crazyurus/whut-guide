<navbar title="{{title}}"></navbar>
<searchbar bindsearch="search" />
<scroll-view class="container" scroll-y="true">
  <card
    wx:for="{{articles}}"
    wx:key="{{item.id}}"
    data-id="{{item.id}}"
    title="{{item.title}}" 
    desc="{{item.description}}" 
    bgColor="{{color}}" 
    bindtap="detail"
  ></card>
  <view wx:if="{{articles.length === 0 && color}}" class="empty">暂时没有内容呢</view>
</scroll-view>
<image class="footer" src="../../images/footer/token.png" bindtap="about" />
