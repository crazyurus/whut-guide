@font-face {
  font-family: '方正大标宋';
  src: url(https://sf1-ttcdn-tos.pstatp.com/obj/larkdeveloper/FZCUJINLJW.woff2) format('woff2');
}

page {
  background-image: linear-gradient(#eaeaea 1px, transparent 0), linear-gradient(90deg, #eaeaea 1px, transparent 0);
  background-size: 36rpx 36rpx;
  position: relative;
  height: 100%;
  font-family: '方正大标宋', STZhongsong, SimSun, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

card {
  display: inline-block;
  width: calc(50% - 24rpx);
  margin: 24rpx 0;
}

.footer {
  position: absolute;
  bottom: 0;
  width: calc(100% - 100rpx);
  left: 50rpx;
  height: 240rpx;
}

.link {
  text-decoration: underline;
}

.share[plain] {
  position: absolute;
  top: 67%;
  right: 0;
  border: none;
  color: #fff;
  background-color: rgba(89, 151, 198, 0.7);
  font-size: 16px;
  border-radius: 16px 0 0 16px;
  padding: 0 8px 0 16px;
  line-height: 2;
  transition: all 0.5s;
  opacity: 1;
}

.share-hidden[plain] {
  opacity: 0;
}