.searchBar {
  border: 2px solid #000;
  border-radius: 8px;
  flex: 1;
  height: 32px;
  background-color: rgba(233,238,245,0.6);
  position: relative;
  margin: 8rpx 38rpx;
}

.searchBar-input {
  position: absolute;
  width: calc(100% - 32px);
  top: 5px;
  left: 4px;
  font-size: 18px;
}

.searchBar-button {
  width: 27px;
  height: 27px;
  position: absolute;
  right: 4px;
  top: 3px;
}